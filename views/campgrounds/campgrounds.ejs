<%- include ('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Your next destination could be lurking here...</p>

            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a></p>
        </div>
    </header>
    <div class="row">
        <% campgrounds.forEach((camp) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail mb-5">
                    <img class="img" src="<%= camp.image %>" alt="" style="width: 15rem; height: 10rem">
                    <div class="caption d-flex flex-column justify-content-center">
                        <h4 class="text-center"><%= camp.name %></h4>
                        <div class="d-flex justify-content-center">
                            <a  href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View more</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer') %>
